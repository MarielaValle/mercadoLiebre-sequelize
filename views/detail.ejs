<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'detail'}) %>

<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Detalle de Producto</h2>
			</div>


			<div class="col-12 col-sm-6 col-lg-3">
				<h3><%= producto.category%></h3>
				<section class="product-box">

					<figure class="product-box_image">
						<img src="/images/products/<%= producto.image %>" alt="imagen de producto">
					</figure>
					<article class="product-box_data">

						<h2>$<%=toThousand(producto.price)%></h2>

						<h2>$<%=formatPrice(producto.price,producto.discount)%></h2>

						<span><%= producto.discount %>%OFF</span>

						<p><%= producto.name %></p>

						<p><%= producto.description %></p>
						
						<p>Precio final con descuento</p>

						<i class="fas fa-truck"></i>
					</article>

				</section>

			</div>



			<!--------------------------row-->
		</div>













		<!-- product detail -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">Detalle del producto: </h2>
				</div>
			</div>
			<div class="product-detail">
				<div class="row">
					<div class="col-12 col-lg-8">
						<img src="/images/products/<%= producto.image %>" alt="product image"
							class="product-detail-img">
						<p class="product-detail-description">
							<%= producto.description %>
						</p>
					</div>
					<div class="col-12 col-lg-4">
						<article class="product-detail-info">
							<h2 class="product-detail-title"><%= producto.name %></h2>

							<p class="product-detail-price small">
								<span>$<%=toThousand(producto.price)%></span>

								<b><%= producto.discount %>%OFF</b>
							<h3>Precio final con descuento</h3>
							<b style="color:#39b54a "> $<%=formatPrice(producto.price,producto.discount) %></b>
							</p>



							<ul class="actions-list">
								<li>
									<i class="fas fa-credit-card"></i>
									<p>Pag√° en 12 cuotas sin interes</p>
								</li>
								<li>
									<i class="fas fa-store"></i>
									<p>Retiro gratis en locales del vendedor</p>
								</li>
							</ul>

							<a href="#" class="buy-now-button">COMPRAR AHORA</a>
							<hr>

							<a href="#" class="action-button edit">EDITAR PRODUCTO</a>
							<form action="#" method="get" style="display: inline-flex">
								<button type="submit" class="action-button delete">ELIMINAR</button>
							</form>
						</article>
					</div>
				</div>
			</div>
		</div>
		<!-- /product detail -->

		<!-- footer -->
		<%- include('partials/footer') %>
		<!-- /footer -->

</body>

</html>